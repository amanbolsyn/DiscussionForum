<!-- Modal for Editin existing Posts -->
<div id="editPostForm" class="post-form">
  <div class="modal-content">
    <span class="close" id="closeEditModal">&times;</span>
    <form id="editPostForm" action="/posts" method="PUT">
      <h2>Edit post</h2>
      <input type="text" id="editPostTitle" placeholder="Enter title" name="title">
      <div class="error" id = "titleEditError"></div><br>
      <textarea id="editPostContent" placeholder="Enter content" name="body"></textarea>
      <div class="error" id = "bodyEditError"></div><br>
      <h3>Select Category</h3>
      <select id="editCategorySelect" name="categories">
        <option value="">--Select a Category--</option>
        <option value="Technology">Technology</option>
        <option value="Science">Science</option>
        <option value="Health">Health</option>
        <option value="Education">Education</option>
        <option value="Lifestyle">Lifestyle</option>
        <option value="Entertainment">Entertainment</option>
        <option value="Sports">Sports</option>
        <option value="Politics">Politics</option>
        <option value="Art">Art</option>
        <option value="Travel">Travel</option>
      </select>
      <div class="error" id = "categoriesEditError"></div><br>
      <button type="submit">Save Changes</button>
    </form><br><br>
  </div>

<!-- Post Editing Logic -->
<script src = "/EditPostHandler.js"></script>